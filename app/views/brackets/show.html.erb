<!-- Show Current Brackets Within the Tournament -->

<h1><%= link_to @tournament.title, @tournament %></h1>
<h2><%= link_to 'Bracket 1', tournament_bracket_path(@tournament, @bracket) %></h2>


<% @match.each do |match| %>
	<div>
		<% @first = match.player_ids.first 
			 @last = match.player_ids.last %>
			<p>
				<strong><%= Player.find_by(id: @first).evetag %></strong>
			 	vs 
			 	<strong><%= Player.find_by(id: @last).evetag %></strong>
		  </p>
	</div>
<% end %>



