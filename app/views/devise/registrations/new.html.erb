<div class="col-xs-12 col-sm-8 col-sm-offset-2 landing">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <%= f.text_field :name, autofocus: true, :placeholder => "NAME" %>
    </div>

    <div>
      <%= f.text_field :evetag, autofocus: true, :placeholder => "EVE ONLINE GAMER TAG" %>
    </div>

    <div>
      <%= f.email_field :email, autofocus: true, :placeholder => "EMAIL ADDRESS" %>
    </div>

    <div>
      <%= f.password_field :password, autocomplete: "off", :placeholder => "PASSWORD" %>
    </div>

    <div>
      <%= f.submit "Create an Account" %>
      
    </div>
  <% end %>
</div>


