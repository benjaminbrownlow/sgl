<h1>Listing Tournaments</h1>

<table>
  <thead>
    <tr>
      <th>Tournament</th>
      <th>Description</th>
      <th>Sign Up Deadline</th>
      <th>Tournament Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tournaments.each do |tournament| %>
      <tr>
        <td><%= tournament.title %></td>
        <td><%= tournament.description %></td>
        <td><%= tournament.signUpDate %></td>
        <td><%= tournament.gameDate %></td>
        <td><%= link_to 'Show', tournament %></td>
        <td><%= link_to 'Edit', edit_tournament_path(tournament) %></td>
        <td><%= link_to 'Destroy', tournament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tournament', new_tournament_path %>
